set shell=bash
imap jj <Esc>

call plug#begin('~/.vim/bundle')

Plug 'scrooloose/nerdtree', { 'on': ['NERDTreeToggle', 'NERDTreeFind'] }
Plug 'ctrlpvim/ctrlp.vim'
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-surround'
Plug 'm-kat/aws-vim'
Plug 'jiangmiao/auto-pairs'
Plug 'elzr/vim-json'
Plug 'rakr/vim-one'
Plug 'w0rp/ale'
Plug 'tpope/vim-commentary'
Plug 'airblade/vim-gitgutter'
Plug 'rking/ag.vim'

call plug#end()

" Theme
silent! colorscheme one
set background=dark
set guifont=Droid\ Sans\ Mono:h18
" call MacSetFont("Droid Sans Mono", 18)

" Easier panel navigation
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" Set default panel location
set splitbelow
set splitright

let g:ale_sign_column_always = 1
let g:ale_set_loclist = 1
let g:ale_set_quickfix = 0
let g:ale_sign_error = 'ðŸ‘¹'
let g:ale_sign_warning = 'ðŸ–•'
let g:ale_echo_msg_error_str = 'ðŸ‘¹'
let g:ale_echo_msg_warning_str = 'ðŸ–•'
let g:ale_echo_msg_format = '[%linter%] %s [%severity%]'

noremap <F11> :NERDTreeFind<CR>
noremap <F12> :NERDTreeToggle<CR>

let NERDTreeShowHidden=1

let g:ctrlp_show_hidden=1
